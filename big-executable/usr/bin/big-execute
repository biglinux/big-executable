#!/bin/bash


if [ "$(echo "$*" | grep -i /usr/bin/open-mtp-dolphin)" != "" ]; then
    /usr/bin/open-mtp-dolphin
    exit
fi 


export TEXTDOMAINDIR="/usr/share/locale"
export TEXTDOMAIN=big-executable

set +H
yad --form --text $"\nAtenção, executar esse tipo de arquivo pode danificar o sistema.\n\nProssiga somente se confiar que não se trata de um arquivo malicioso.\n \n \n \n" \
--button=gtk-cancel:0 \
--button=$" Executar no terminal!/usr/share/icons/gnome/16x16/apps/utilities-terminal.png":1 \
--button=$"Executar!/usr/share/icons/hicolor/16x16/apps/running.png":2 \
--center --on-top --borders=20 --title=$"Executar arquivo" \
--window-icon="emblem-warning"

        yadresult=$?
        set -H
        if [ "$yadresult" = "0" ]; then
            exit
        fi

        if [ "$yadresult" = "1" ]; then
            chmod +x "$*"
            konsole -e "$*"
        fi

    
        if [ "$yadresult" = "2" ]; then
            chmod +x "$*"
            "$*"
        fi
